<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:padding="@dimen/standard_parent_padding">

            <ImageView
                android:id="@+id/iv_item_list_movie_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/content_description_movie_image"
                android:src="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_item_list_movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_item_list_movie_image"
                android:layout_marginLeft="@dimen/standard_margin_between_element"
                android:layout_marginStart="@dimen/standard_margin_between_element"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Lord of the Ring" />

            <TextView
                android:id="@+id/tv_item_list_movie_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_item_list_movie_title"
                android:layout_alignStart="@id/tv_item_list_movie_title"
                android:layout_below="@id/tv_item_list_movie_title"
                android:gravity="center_horizontal"
                tools:text="2001" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>